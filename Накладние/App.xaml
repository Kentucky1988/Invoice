<Application x:Class="Накладние.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Накладние"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
       
        <Style x:Key= "StylesButton">
            <Setter Property="Button.FontSize" Value="16"/>
            <Setter Property="Button.FontFamily" Value="Microsoft Sans Serif"/>
            <Setter Property="Button.Foreground" Value="#FF2A46A5"/>
            <Setter Property="Button.Background" Value="#FFBDE8DB"/>
        </Style>

        <Style x:Key= "StylesGrid">
            <Setter Property="Grid.Background">
                <Setter.Value>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.8,0">
                        <GradientStop Color="#FF43C7D4" />
                        <GradientStop Color="#FF77C777" Offset="0.77"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
